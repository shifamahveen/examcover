<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Clients</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center p-8">
  <h1 class="text-3xl font-bold mb-6">Clients</h1>

  <% if (clients.length === 0) { %>
    <p class="text-gray-600">No clients found.</p>
  <% } else { %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 w-full max-w-6xl">
      <% clients.forEach(client => { %>
        <div class="bg-white rounded-lg shadow-md p-6">
          <h2 class="text-xl font-semibold mb-2"><%= client.name %></h2>
          <p class="text-gray-700 mb-1">Email: <%= client.email %></p>
          <p class="text-gray-500 text-sm">Client ID: <%= client.id %></p>
          <p class="text-gray-500 text-sm">Created At: <%= client.createdAt ? client.createdAt : 'N/A' %></p>
          <a href="/api/v1/tenant/clients/<%= client.id %>/analytics" class="text-blue-500 hover:underline mt-4 inline-block">
            View Analytics
          </a>
        </div>
      <% }); %>
    </div>
  <% } %>
</body>
</html>